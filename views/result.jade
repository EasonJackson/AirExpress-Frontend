doctype

html(lang= "en")
	meta( charset='utf-8' )
	meta( http-equiv='X-UA-Compatible', content='IE=edge' )
	meta( name='viewport', content='width=device-width, initial-scale=1.0' )
	meta( name='description', content='Baking Bootstrap Snippets with Jade' )
	link( href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
	link( href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.theme-min.css", rel="stylesheet")
	
	head
		title= title

	body(style="padding-bottom:10rem; padding-top: 5rem" data-spy="scroll" data-target=".navbar" data-offest="50")
		.div
			.container-fuild
				nav(role="navigation", class=["navbar", "navbar-default"])
					.navbar.navbar-default.collapsed( data-spy='affix', data-offset-top='10')
						.container-fuild
							.navbar-header
								.navbar-toggle.collapsed( type="button", data-toggle="collapse", aria-expanded="false", aria-controls="navbar")
									span.sr-only Toggle navigation
									span.icon-bar
									span.icon-bar
									span.icon-bar
								.navbar-brand()= "WPI Flights"
								.collapse.navbar-collapse(id='resultNavbar')
									.btn-group
											.btn.btn-info(type='text', class='inactive', color='#ffffff') Sort by
											input.btn.btn-primary(type='submit', class='active', color='#ffffff', method="post", action="/result", id="price", name="price", value="Price")
											input.btn.btn-primary(type='submit', class='active', color='#ffffff', method="post", action="/result", id="duration", name="duration", value="Traval Time")
								.collapse.navbar-collapse(id='Tags')
									ul.nav.navbar-nav
										li(type='text', class='active') Flight
										li(type='text', class='form', control='') Price	
										li(type='text', class='form') Departure time
										li(type='text', class='form') Arrival time

		.div
			.container-fuild
				.col-md-2
					.checkbox
						label
							input(type="checkbox", value="Direct Flight")
							| All

					.checkbox
						label
							input(type="checkbox", value="Direct Flight")
							| Direct Flight
								
					.checkbox
						label
							input(type="checkbox", value="Two legs")
							| Two legs
								
					.checkbox
						label
							input(type="checkbox", value="Three legs")
							| Three legs
									
				.col-md-8
					table(style="table-layout: fixed;")
						tr(class="search-result-panel")
							td(style="padding-left: 0 px; width: 1000px")
								table.table
									thead
										tr
											th Depart
											th Destination
											th Price
											th Flight Schedule
											th Show Details
									for item in resultList
										tbody
											tr(method="get", action="/detail", id= item.tripid)
												td #{item.info.depart}   
												td #{item.info.arrival}
												td 
													.p Coach Price: $#{item.info.price_coach}
													.p Firstclass Price: $#{item.info.price_firstclass}
												td 
													.p #{item.info.departTime}  -  #{item.info.arrivalTime}
													.p Duration: #{item.info.flightTime} Minutes
												td.text-center
													a.btn.btn-primary(href='/detail?id=#{item.tripid}',name="getDetails", role="button", aria-pressed='true', value="Details", type="submit") Details
									

									else
										li No result found.
				.col-md-2

		
