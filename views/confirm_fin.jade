include mixins
doctype

html(lang= "en")
	meta( charset='utf-8' )
	meta( http-equiv='X-UA-Compatible', content='IE=edge' )
	meta( name='viewport', content='width=device-width, initial-scale=1.0' )
	meta( name='description', content='Baking Bootstrap Snippets with Jade' )
	link( href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

	script( src='//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js' )
	script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )

	head
		title= title

	body(style="padding-bottom:10rem; padding-top: 10rem")
	.container-fluid
		.col-md-1
			p
		.col-md-10
			panel.panel-default(id="flightDetail", method="post", action="/confirm")
				.panel-heading
					h2 Flight Reservation
				.panel-body
					

		.col-md-1
			p

	.col-md-12

	.container-fluid
		.col-md-1
			p
		.col-md-10
			.div
				table.table.table-hover
					thead(class="h4") 
						tr
							th Depart:
							th Flight Number
							th From
							th To
							th Flight Time
							th Prices and Seats					
					tbody
						tr
							td
							td #{selectTrip.depart.info.first_flightNumber} 
							td #{selectTrip.depart.info.depart} : #{selectTrip.depart.info.departTime}
							td #{selectTrip.depart.info.arrival} : #{selectTrip.depart.info.arrivalTime}
							td #{selectTrip.depart.info.flightTime} Minutes
							td 
								if seat == "Coach"
									Coach: $#{selectTrip.depart.info.price_coach}
								else
									Firstclass: $#{selectTrip.depart.info.price_firstclass}

				if selectTrip.return != null
					table.table.table-hover
						thead(class="h4") 
							tr
								th Return:
								th Flight Number
								th From
								th To
								th Flight Time
								th Prices
						tbody
							tr
								td
								td #{selectTrip.return.info.first_flightNumber} 
								td #{selectTrip.return.info.depart} : #{selectTrip.return.info.departTime}
								td #{selectTrip.return.info.arrival} : #{selectTrip.return.info.arrivalTime}
								td #{selectTrip.return.info.flightTime} Minutes
								td
									if seat == "Coach" 
										Coach: $#{selectTrip.return.info.price_coach}
									else
										Firstclass: $#{selectTrip.return.info.price_firstclass}
				table.table.table-hover
					thead(class="h4") Total: 
						p $#{total_coach} Coach
						p $#{total_firstclass} FirstClass
						
		.col-md-1
			p

	.col-md-12
	.container-fluid
			.col-md-2
			.col-md-8
				.nav.navbar-right
					.div.text-right
						a.btn.btn-default(href="/", type="submit", style="margin-right: 10px; font-size: 110%", value="back") Home

	- if(result)
		.col-md-4
		.col-md-4
			.alert.alert-success(class="h4", role="alert") 
				strong Thank you!
				| #{result}
		.col-md-4