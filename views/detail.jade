include mixins
doctype

html(lang= "en")
	meta( charset='utf-8' )
	meta( http-equiv='X-UA-Compatible', content='IE=edge' )
	meta( name='viewport', content='width=device-width, initial-scale=1.0' )
	meta( name='description', content='Baking Bootstrap Snippets with Jade' )
	link( href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")

	script( src='//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js' )
	script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )

	head
		title= title

	body(style="padding-bottom:10rem; padding-top: 10rem")
		.container-fluid
			.col-md-1
				p
			.col-md-10
				panel.panel-default(id="flightDetail", method="post", action="/confirm")
					.panel-heading
						h2 Flight Infomation
					.panel-body
						

			.col-md-1
				p

		.col-md-12

		.container-fluid
			.col-md-1
				p
			.col-md-10
				.div
					table.table.table-hover
						thead(class="h4")
							tr
								th Flight Number
								th Departure
								th Destination
								th Flight Time
								th Prices and Seats
								
						for flight in trip
							tbody
								tr
									td #{flight.Airplane} - #{flight.Number} 
									td #{flight.CodeDepart} : #{flight.TimeDepart}
									td #{flight.CodeArrival} : #{flight.TimeArrival}
									td #{flight.FlightTime} Minutes
									td 
										p Coach: $#{flight.PriceCoach} / #{flight.SeatsCoach} remaining
										p Firstclass: $#{flight.PriceFirstclass} / #{flight.SeatsFirstclass} remaining
								
			.col-md-1
				p

		.col-md-12

		.container-fluid
			.col-md-2
			.col-md-8
				.nav.navbar-right
					.div.text-right
						a.btn.btn-default(href="/result?tripid=#{tripid}&type=#{type}&sort=#{sort}",type="submit", style="margin-right: 10px; font-size: 110%", value="select", method="get") Select
						a.btn.btn-default(type="submit", style="margin-right: 10px; font-size: 110%", value="back", method="post", action="/") Back
						